/* were a webkit browser, lets style our scroll bar */
@media screen and (-webkit-min-device-pixel-ratio:0) {

    ::-webkit-scrollbar {
        /* set the width of the scroll bar */
        width: 15px;
        height: 15px;
        background: #c0c0c0;
    }

    ::-webkit-scrollbar-button:start:decrement:vertical, 
    ::-webkit-scrollbar-button:end:increment:vertical {
        /* hide the arrows */
        display: block;
        height: 15px;
        width: 15px;
        background: url('/app/images/sprite.png') no-repeat;
    }

    ::-webkit-scrollbar-button:vertical:start:decrement {
        background-position: -32px top;
    }
    ::-webkit-scrollbar-button:vertical:end:increment {
        // background-position: -48 top;
        background-position: -48px top;
    }

    ::-webkit-scrollbar-track-piece:vertical {
        background: url('/app/images/bg_scroll_2.png') repeat-y left top;
    }
    ::-webkit-scrollbar-thumb:vertical{
        background: #e3e3e3 url('/app/images/lines_scroll_cnt_2.png') no-repeat 3px center;
        border: 1px solid #666;
    }
     ::-webkit-scrollbar-track-piece:horizontal {
        background: url('/app/images/bg_scroll_3.png') repeat-x left top;
    }

    ::-webkit-scrollbar-thumb:horizontal{
        background: #e3e3e3 url('/app/images/lines_scroll_cnt_3.png') no-repeat  center;
        border: 1px solid #666;
    }
    ::-webkit-scrollbar-button:start:decrement:horizontal, 
    ::-webkit-scrollbar-button:end:increment:horizontal {
        /* hide the arrows */
        display: block;
        height: 15px;
        width: 15px;
        background: url('/app/images/sprite.png') no-repeat;
    }
    ::-webkit-scrollbar-button:horizontal:start:decrement {
        background-position:  -155px -73px;
    }
    ::-webkit-scrollbar-button:horizontal:end:increment {
        // background-position: -48 top;
        background-position:    -140px -73px;
    }
}